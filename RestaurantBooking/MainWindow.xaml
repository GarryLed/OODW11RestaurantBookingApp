<Window x:Class="RestaurantBooking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantBooking"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Booking Details" HorizontalAlignment="Left" Margin="26,24,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="New Booking" HorizontalAlignment="Left" Margin="560,24,0,0" VerticalAlignment="Top" FontSize="18"/>
        <DatePicker x:Name="dpShowBookings" HorizontalAlignment="Left" Margin="182,34,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpNewBookings" HorizontalAlignment="Left" Margin="567,79,0,0" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="26,91,280,73" Width="NaN"/>
        <TextBox x:Name="tbxNoOfCustomers" HorizontalAlignment="Left" Margin="567,134,0,0" TextWrapping="Wrap" Text="Number of Customers" VerticalAlignment="Top" Width="164" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="tbxEnterCustomerName" HorizontalAlignment="Left" Margin="567,189,0,0" TextWrapping="Wrap" Text="Customer Name" VerticalAlignment="Top" Width="164" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="tbxGetCustomerNo" HorizontalAlignment="Left" Margin="567,249,0,0" TextWrapping="Wrap" Text="Contact Number" VerticalAlignment="Top" Width="164" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnSearchCustomer" Content="Customer Search" HorizontalAlignment="Left" Margin="592,320,0,0" VerticalAlignment="Top" Width="114"/>
        <Button x:Name="btnDeleteBooking" Content="Delete Booking" HorizontalAlignment="Left" Margin="385,398,0,0" VerticalAlignment="Top" Width="114"/>
        <Label Content="Capacity:" HorizontalAlignment="Left" Margin="26,392,0,0" VerticalAlignment="Top"/>
        <Label Content="Bookings:" HorizontalAlignment="Left" Margin="136,392,0,0" VerticalAlignment="Top"/>
        <Label Content="Available:" HorizontalAlignment="Left" Margin="236,392,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkCapacity" HorizontalAlignment="Left" Margin="89,392,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="29"/>
        <TextBlock x:Name="tblkTotalBookings" HorizontalAlignment="Left" Margin="202,392,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="29" RenderTransformOrigin="2.39,0.497"/>
        <TextBlock x:Name="tblkAvailability" HorizontalAlignment="Left" Margin="301,392,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="29" RenderTransformOrigin="2.39,0.497"/>

    </Grid>
</Window>
